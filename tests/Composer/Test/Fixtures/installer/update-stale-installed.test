{
    "repositories": [
        {
            "type": "package",
            "package": [
                { "name": "a/a", "version": "1.0.0", "homepage": "http://example.com/a/a" }
            ]
        }
    ],
    "require": {
        "a/a": "1.0.0"
    }
}
--LOCK--
{
    "packages": [
        { "name": "a/a", "version": "1.0.0", "homepage": "http://example.com/a/a" }
    ]
